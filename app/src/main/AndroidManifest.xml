<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appsfeature.adssdk">


    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.appsfeature.adssdk.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.appsfeature.adssdk.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.appsfeature.adssdk.InterstitialAdActivity"
            android:label="@string/title_activity_second_activiy"
            android:theme="@style/AppTheme" />
        <activity android:name="com.appsfeature.adssdk.RewardedVideoAdActivity"/>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/ads_admob_app_id" />

    </application>

</manifest>